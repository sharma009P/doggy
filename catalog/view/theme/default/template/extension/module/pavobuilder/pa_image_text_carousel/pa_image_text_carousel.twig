{% set id = random(1..9) + random() %}
<div class="widget-image-text-carousel {{settings.layout}} {{ settings.extra_class ? [ ' ', settings.extra_class ] | join() : '' }}">
    <div class="row">
        <div class="swiper-container gallery-top" id="image-carousel{{id}}">
            <div class="swiper-wrapper">
                {% for image in settings.get_items %}
                    <div class="swiper-slide">
                        <div class="image-text-carousel">
                            <div class="image-carousel col-md-4 col-sm-4 col-xs-12">
                                <img class="img-responsive" src="{{image.image}}" alt="{{image.alt}}"></a>
                            </div>
                            <div class="text-carousel col-md-8 col-sm-8 col-xs-12">
                                <div class="gallery-thumbs">
                                    {% if image.title %}
                                    <div class="item-title">{{image.title}}</div>
                                    {% endif %}
                                    {% if image.content and image.content != '<p><br></p>' %}
                                    <div class="item-content">{{image.content}}</div>
                                    {% endif %}
                                    {% if image.button_link %}
                                    <div class="button-video">
                                        <a href="{{ image.button_link }}" class="btn btn-primary">
                                            {% if image.icon %}
                                            <i class="fa {{image.icon}}"></i>
                                            {% endif %}
                                            {% if image.button_text %}
                                            <span>{{ image.button_text }}</span>
                                            {% endif %}
                                        </a>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pager">
                <div class="image-gallery-prev swiper-button-prev"></div>
                <div class="image-gallery-next swiper-button-next"></div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"><!--
    var galleryTop = $('#image-carousel{{id}}').swiper({
        pause: 'hover',
        nextButton: '.swiper-button-next',
        prevButton: '.swiper-button-prev',
        slidesPerView: 1,
        slidesPerColumn:1,
        {% if settings.effect1 == "cube" or settings.effect1 == "flip" or settings.effect1 == "fade" %}
        effect: '{{settings.effect1}}',
        {% endif %}
    });
--></script>
