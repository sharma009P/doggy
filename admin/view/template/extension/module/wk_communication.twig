{{header}}{{column_left}}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{button_save}}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{cancel}}" data-toggle="tooltip" title="{{button_cancel}}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{heading_title}}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if  error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i>{{error_warning}}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{heading_title_edit}}</h3>
      </div>
    <div class="panel-body">
    <form action="{{action}}" class="form-horizontal" method="post" enctype="multipart/form-data" id="form">
      <div class="form-group">
            <label class="col-sm-2 control-label" for="status">{{entry_status}}</label>
            <div class="col-sm-10">
             <select name="module_wk_communication_status" id="status" class="form-control">
              {% if module_wk_communication_status  and  module_wk_communication_status  ==  1 %}
                <option value="1"  "selected">{{text_enabled}}</option>
                <option value="0" >{{text_disabled}}</option>
                 {% else %}
                <option value="0" "selected">{{text_disabled}}</option>
                 <option value="1">{{text_enabled}}</option>
                 {% endif %}
              </select>
          </div>
          </div>
          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-type"><span data-toggle="tooltip" title="{{entry_attachment}}">{{entry_attachment}}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="module_wk_communication_type" value="{{module_wk_communication_type}}" placeholder="jpg,jpeg,png,gif,doc,docx,xls,xlsx,ppt,pptx,pdf" id="input-type" class="form-control" />
                </div>
          </div>
          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-size"><span data-toggle="tooltip" title="{{entry_size}}">{{entry_size}}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="module_wk_communication_size" value="{{module_wk_communication_size}}" placeholder="in(kb)" id="input-size" class="form-control" />
                </div>
          </div>
           <div class="form-group">
                <label class="col-sm-2 control-label" for="input-max"><span data-toggle="tooltip" title="{{entry_max}}">{{entry_max}}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="module_wk_communication_max" value="{{module_wk_communication_max}}" placeholder="" id="input-max" class="form-control" />
                </div>
          </div>
          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-bcc"><span data-toggle="tooltip" title="{{entry_bcc}}">{{entry_bcc}}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="module_wk_communication_bcc" value="{{module_wk_communication_bcc}}" placeholder="" id="input-bcc" class="form-control" />
                </div>
          </div>
          <div class="form-group">
                <label class="col-sm-2 control-label" for="input-bcc"><span data-toggle="tooltip" title="{{entry_mail_keywords_info}}">{{entry_mail_keywords}}</span></label>
                <div class="col-sm-10">
                <input type="text" name="module_wk_communication_keywords" value="{{module_wk_communication_keywords}}" placeholder="new password,reset your password " id="input-keywords" class="form-control" />
                </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="search"><span data-toggle="tooltip" title="{{entry_mail_search_info}}">{{entry_mail_search}}</span></label>
            <div class="col-sm-10">

            <select name="module_wk_communication_search[]" value="" id="status" class="form-control" multiple>
            {% if "message" in module_wk_communication_search %}
              <option value="message" selected >{{text_message}}</option>
             {% else %}
           <option value="message" >{{text_message}}</option>
           {% endif %}
            {% if "subject" in module_wk_communication_search %}
              <option value="subject" selected >{{text_subject}}</option>
             {% else %}
           <option value="subject" >{{text_subject}}</option>
           {% endif %}
            {% if "header" in module_wk_communication_search %}
              <option value="header" selected >{{text_header}}</option>
             {% else %}
           <option value="header" >{{text_header}}</option>
           {% endif %}
              </select>
            </div>
          </div>
    </form>
  </div>
  </div>
  </div>
</div>
