
{% if pavreassurances is not empty %}
		<div class="box-module-pavreassurances {{prefix_class}}">
				<div class="row box-outer">
						{% set i = 1 %}
						{% for reassurance in pavreassurances %}
							<div class="col-lg-4 col-md-3 col-sm-3 col-xs-12 column">
								<div class="reassurances-center {{ (reassurance.reassurance_prefixclass is defined)?(reassurance.reassurance_prefixclass):''}}">
									<span class="icon-name fa {{ reassurance.select_icon }}"></span>
									<div class="description">
										<h4>{{ reassurance.title }}</h4>
										{{ reassurance.caption }}
										<!-- Button trigger modal -->
										<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal{{ i }}"><i class="fa fa-long-arrow-right"></i></button>
										<div class="mask" style="display:none;">
											{{ reassurance.detail }}
										</div>
									</div>
								</div>
							</div>
							<!-- Modal -->
							<div class="modal fade" id="myModal{{ i }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
							        <span class="icon-name fa {{ reassurance.select_icon }}"></span>
							        <h4>{{ reassurance.title }}</h4>
							        {{ reassurance.caption }}
							      </div>
							      <div class="modal-body">
							       		{{ reassurance.detail }}
							      </div>
							      <div class="modal-footer">
							        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							      </div>
							    </div>
							  </div>
							</div>
							{% set i = i + 1 %}
						{% endfor %}
				</div>
		</div>
	{% endif %}
{% if check_file == 1 %}
 <link href="catalog/view/theme/{{ config_theme }}/stylesheet/pavreassurance.css" rel="stylesheet">
{% else %}
 <link href="catalog/view/theme/default/stylesheet/pavreassurance.css" rel="stylesheet">
{% endif %}
