{% set uniqe = now|date('YmdHis') %}
<div class="pavoblog-media media-gallery">
	<div class="swiper-viewport">
	  	<div id="gallery{{ uniqe }}" class="swiper-container">
	    	<div class="swiper-wrapper">
	    		{% for gallery in post.gallery %}
	      			<div class="swiper-slide">
	      				<img src="{{ gallery.image }}" />
	      			</div>
	      		{% endfor %}
	  		</div>
	  	</div>
	</div>
	<div class="swiper-pagination carousel{{ uniqe }}"></div>
  	<div class="swiper-pager">
    	<div class="swiper-button-next"></div>
    	<div class="swiper-button-prev"></div>
  	</div>
</div>
<script type="text/javascript"><!--
$('#gallery{{ uniqe }}').swiper({
	mode: 'horizontal',
	slidesPerView: 5,
	pagination: '.carousel{{ uniqe }}',
	paginationClickable: true,
	nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
	autoplay: 2500,
	loop: true
});
--></script>